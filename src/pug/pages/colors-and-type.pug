extends ../layout/uikit
include ../includes/color/color
include ../includes/type/type

block variables
  - var title = 'Colors & Type';
  - var description = 'FSD frontend education program. The 2nd task';
  - var pageClass = 'ui-colors';

block content
  .container
    .colors
      +color('Dark Shade 100%', '#1F2041', '#1F2041')
      +color('Dark Shade 75%', 'rgba(31, 32, 65, 0.75)', '#1F2041')
      +color('Dark Shade 50%', 'rgba(31, 32, 65, 0.5)', '#1F2041')
      +color('Dark Shade 25%', 'rgba(31, 32, 65, 0.25)', '#1F2041')
      +color('Dark Shade 5%', 'rgba(31, 32, 65, 0.05)', '#1F2041')
      +color('Purple', '#BC9CFF', '#BC9CFF')
      +color('Green', '#6FCF97', '#6FCF97')
    .types
      +type('type_size_h1', 'H1', 'This one is the sub-section or widget title')
      +type('type_size_h2', 'H2', 'Next one is the item title inside widgets')
      +type('type_size_h3', 'H3', 'This is a label or CTA text')
      +type('type_size_body', 'Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.')
